{% extends 'base.html.twig' %}

{% block title %}leçon{% endblock %}

{% block body %}
    <h1>leçon</h1>

    <table class="table-info">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ lesson.Name }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ lesson.start ? lesson.start|date('y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ lesson.end ? lesson.end|date('y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbPlace</th>
                <td>{{ lesson.NbPlace }}</td>
            </tr>
            <tr>
                <th>day</th>
                <td>{{ lesson.allday }}</td>
            </tr>
            <tr>
                <th>Border_color</th>
                <td>{{ lesson.borderColor }}</td>
            </tr>
            <tr>
                <th>Text_color</th>
                <td>{{ lesson.textColor }}</td>
            </tr>
            <tr>
                <th>Coach</th>
                <td>{{ lesson.Coach }}</td>
            </tr>
            <tr>
                <th>Lieux</th>
                <td>{{ lesson.location }}</td>
            </tr>
        </tbody>
    </table>
    <div>
        <a href="{{ path('app_planning') }}">Retour</a>

        <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>

        {{ include('lesson/_delete_form.html.twig') }}
    </div>

{% endblock %}
