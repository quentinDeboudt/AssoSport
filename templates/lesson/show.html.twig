{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ lesson.Name }}</td>
            </tr>
            <tr>
                <th>StartTime</th>
                <td>{{ lesson.StartTime ? lesson.StartTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>EndTime</th>
                <td>{{ lesson.EndTime ? lesson.EndTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>NbPlace</th>
                <td>{{ lesson.NbPlace }}</td>
            </tr>
            <tr>
                <th>Background_color</th>
                <td>{{ lesson.backgroundColor }}</td>
            </tr>
            <tr>
                <th>All_day</th>
                <td>{{ lesson.AllDay ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Border_color</th>
                <td>{{ lesson.borderColor }}</td>
            </tr>
            <tr>
                <th>Text_color</th>
                <td>{{ lesson.textColor }}</td>
            </tr>
            <tr>
                <th>Coach</th>
                <td>{{ lesson.Coach }}</td>
            </tr>
            <tr>
                <th>Lieux</th>
                <td>{{ lesson.location }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_index') }}">back to list</a>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
