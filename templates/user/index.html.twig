{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    {%if app.user%}
        <div id="BlockModifyProfile">
            <div id="avatar">
                {%if app.user.brochureFilename%}
                    <div id="account-image" >
                        <img id="img-profil" src="{{ asset(app.user.brochureFilename)}}" alt="Image de profil" onclick="document.getElementById('modalAccount').style.display='block'" >
                    </div>
                {%else%}
                    <div id="account-image" >
                        <img id="img-profil" src="{{ asset('Directory/IconProfil.png')}}" alt="Image de profil" onclick="document.getElementById('modalAccount').style.display='block'">
                    </div>
                {%endif%}
            </div>

            {{ form_start(editProfilForm) }}
            {{ form_errors(editProfilForm) }}
            <div class="inputModifyProfile">
                {{ form_row(editProfilForm.firstname)}}
            </div>
            <div class="inputModifyProfile">
                {{ form_row(editProfilForm.lastname)}}
            </div>
            <div class="inputModifyProfile">
                {{ form_row(editProfilForm.email)}}
            </div>
            <div class="inputModifyProfile">
                {{ form_row(editProfilForm.password)}}
            </div>
            <div class="coco2" >
                {{ form_row(editProfilForm.brochure)}}
            </div>

            <button  class="btn-show-save" >{{ button_label|default('Save') }}</button>

            <div class="btn-show-retour">
                <a href="{{path('app_home')}}"><button>Annuler</button></a>
            </div>
            {{ form_end(editProfilForm) }}

            <button onClick="window.history.back();" type="button" class="btnAct">Page précédente</button>
        </div>
    {%endif%}
{% endblock %}
