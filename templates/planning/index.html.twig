{% extends 'base.html.twig' %}

{% block title %}Planning{% endblock %}

{% block body %}

    <div id="AllPage-calendar">
        <!-- ##########_First bloc Planning_########## -->
        <div id="block-image-planning">
            <img id="Image-plannig-first" src="{{ asset('Directory/Image-plannig-first.png') }}" alt="Image-planning-sport">
            <h2 id="motive">Motiv√© ?</h2>
            <h2 id="go">GO !</h2>
        </div>

        <!-- ##########_Second bloc Planning_########## -->
        <a href="{{path('app_lesson_index')}}"> <h2 style="width:fit-content; color: white">Ajouter</h2></a>

        <section id="Calendar-section" style="color: white">
            {% for lesson in lessons %}
                <p>Start: {{ lesson.StartTime|date("m/d/Y H:m:s") }}</p>
                <p>End: {{ lesson.EndTime|date("m/d/Y H:m:s") }}</p>
                <p>Name: {{ lesson.Name }}</p>
                <p>Coach: {{ lesson.Coach }}</p>
                <p>Location: {{ lesson.Location }}</p>
                <p>Place: {{ lesson.NbPlace }}</p>
            {% endfor %}
        </section>
    </div>

    {% include 'Footer.html.twig' %}
{% endblock %}


